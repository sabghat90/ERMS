<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feature_nav_graph"
    app:startDestination="@id/featureFragment">

    <fragment
        android:id="@+id/featureFragment"
        android:name="com.kust.ermsemployee.ui.dashboard.FeaturesFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_feature">
        <action
            android:id="@+id/action_featureFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_featureFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_featureFragment_to_viewAttendanceFragment"
            app:destination="@id/viewAttendanceFragment" />
        <action
            android:id="@+id/action_featureFragment_to_taskListingFragment"
            app:destination="@id/taskListingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_featureFragment_to_eventListingFragment"
            app:destination="@id/eventListingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_featureFragment_to_employeeRankListingFragment"
            app:destination="@id/employeeRankListingFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.kust.ermsemployee.ui.setting.SettingFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_setting">
        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingFragment_to_privacyPolicyFragment"
            app:destination="@id/privacyPolicyFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingFragment_to_projectProposalFragment"
            app:destination="@id/projectProposalFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.kust.ermsemployee.ui.setting.ChangePasswordFragment"
        android:label="@string/change_password"
        tools:layout="@layout/fragment_change_password">
        <action
            android:id="@+id/action_changePasswordFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:popUpTo="@id/settingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.kust.ermsemployee.ui.setting.PrivacyPolicyFragment"
        android:label="@string/privacy_policy"
        tools:layout="@layout/fragment_privacy_policy" />
    <fragment
        android:id="@+id/projectProposalFragment"
        android:name="com.kust.ermsemployee.ui.setting.ProjectProposalFragment"
        android:label="@string/project_proposal"
        tools:layout="@layout/fragment_project_proposal" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.kust.ermsemployee.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/viewAttendanceFragment"
        android:name="com.kust.ermsemployee.ui.attendance.ViewAttendanceFragment"
        android:label="fragment_view_attendace"
        tools:layout="@layout/fragment_view_attendace" />
    <fragment
        android:id="@+id/taskListingFragment"
        android:name="com.kust.ermsemployee.ui.task.TaskListingFragment"
        android:label="fragment_task_listing"
        tools:layout="@layout/fragment_task_listing" >
        <action
            android:id="@+id/action_taskListingFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.kust.ermsemployee.ui.task.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" />
    <fragment
        android:id="@+id/eventListingFragment"
        android:name="com.kust.ermsemployee.ui.event.EventListingFragment"
        android:label="fragment_event_listing"
        tools:layout="@layout/fragment_event_listing" >
        <action
            android:id="@+id/action_eventListingFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.kust.ermsemployee.ui.event.EventDetailFragment"
        android:label="fragment_event_detail"
        tools:layout="@layout/fragment_event_detail" />
    <fragment
        android:id="@+id/employeeRankListingFragment"
        android:name="com.kust.ermsemployee.ui.ranking.EmployeeRankListingFragment"
        android:label="fragment_employee_rank_listing"
        tools:layout="@layout/fragment_employee_rank_listing" />
</navigation>